extends RigidBody2D

@onready var area = $Area2D
var puede_sumar := true

func _ready():
	area.area_entered.connect(_on_area_entered)
	area.area_exited.connect(_on_area_exited)

func _on_area_entered(area):
	if puede_sumar and get_instance_id() < area.get_parent().get_instance_id():
		GameManager.colisiones_totales += 1
		print("Sumando punto")
		puede_sumar = false

func _on_area_exited(area):
	puede_sumar = true
